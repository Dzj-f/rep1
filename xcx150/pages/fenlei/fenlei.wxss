  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;

}
.list{
    position: relative;
    width: 96%;
    height: 200rpx;
    /* background-color: red; */
    border-bottom: 1rpx solid #e9e9e9;
    
}


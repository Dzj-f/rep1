   margin: 10rpx;
   padding: 10rpx;
}
.new-container swiper{
    width: 98%;
    height: 350rpx;
    margin: 0 auto;
    border-radius: 12rpx;
    box-shadow: 8rpx 8rpx 8rpx rosybrown
}

.new-container swiper image{
    width: 100%;
    height: 100%;
